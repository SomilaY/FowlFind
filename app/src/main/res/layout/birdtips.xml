<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/Grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/FowlFind"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/fowlfind"
            android:layout_marginTop="16dp" />

        <!-- Tip 1: Get the Right Equipment -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get the Right Equipment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Binoculars: Invest in a good pair of binoculars. Look for ones with a comfortable grip, good field of view, and appropriate magnification (8x42 is a common recommendation)."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field Guide: A bird field guide specific to your region is essential. It helps you identify birds based on their characteristics."
            android:layout_marginBottom="16dp"/>

        <!-- Repeat similar TextViews for other tips -->

        <!-- Tip 2: Start with Common Birds -->
        <TextView
            android:id="@+id/tipTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start with Common Birds"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Begin with common and easily identifiable birds in your area. This will help you build confidence and skills gradually."
            android:layout_marginBottom="16dp"/>

        <!-- Tip 3: Learn Birding Basics -->
        <TextView
            android:id="@+id/tipTitle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn Birding Basics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Familiarize yourself with bird anatomy, plumage, and behavior. Understanding these basics will make identification easier."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose the Right Time:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birds are most active during the early morning and late afternoon. These times, known as the 'golden hours,' offer the best opportunities for sighting and photography."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Be Patient and Observant:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birds can be elusive, so patience is key. Spend time quietly observing an area, and you may be rewarded with interesting sightings."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn Bird Calls:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Familiarize yourself with the calls and songs of birds. This can be as important as visual identification, especially when birds are hidden in foliage."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join a Birding Group:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birding with experienced bird watchers can be a great way to learn new skills, share knowledge, and discover new locations."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respect Wildlife:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep a respectful distance from birds to avoid disturbing them. Use binoculars and cameras with zoom lenses to observe from afar."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dress Appropriately:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wear neutral-colored clothing to blend in with your surroundings. Comfortable, weather-appropriate clothing and sturdy footwear are essential for outdoor birding."
            android:layout_marginBottom="16dp"/>

    </LinearLayout>


</ScrollView>
